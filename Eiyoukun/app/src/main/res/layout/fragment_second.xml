<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondFragment"
    android:orientation="vertical">



    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/grid_border"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            app:layout_columnWeight="3"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/kojin_purpose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            app:layout_columnWeight="5"
            app:layout_column="1"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/grid_border"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/textViewCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="カロリー"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textViewProtain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="タンパク質"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView132"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標値"
            android:gravity="center"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <TextView
            android:id="@+id/calorieGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView158"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標値"
            android:gravity="center"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/proteinGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            app:layout_column="5"
            app:layout_columnSpan="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView162"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在値"
            android:gravity="center"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/calorieNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_columnSpan="3"
            android:gravity="center"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView166"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在値"
            android:gravity="center"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/proteinNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_columnSpan="3"
            android:gravity="center"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textViewCarbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="炭水化物"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textViewFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="脂質"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_columnSpan="4"
            app:layout_columnWeight="2"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView178"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標値"
            android:gravity="center"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/carbonGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_columnSpan="3"
            android:gravity="center"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView182"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標値"
            android:gravity="center"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/fatGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_columnSpan="3"
            android:gravity="center"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView186"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在値"
            android:gravity="center"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/carbonNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_columnSpan="3"
            android:gravity="center"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在値"
            android:gravity="center"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/fatNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_columnSpan="3"
            android:gravity="center"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_row="5" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/foodRegistButton"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:elevation="15dp"
        android:text="食事情報追加"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:background="@drawable/grid_border"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.viewpager.widget.ViewPager>


</LinearLayout>