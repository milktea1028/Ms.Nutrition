<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SubActivity1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="412dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/today"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border1"
            android:gravity="center"
            android:text="今日の日付"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/kojin_purpose"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border1"
            android:gravity="center"
            android:text="ダイエット"
            app:layout_column="1"
            app:layout_row="0" />

    </GridLayout>

    <Button
        android:id="@+id/toKojinButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="個人"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/syokuziButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="食事"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toKojinButton" />

    <GridLayout
        android:layout_width="213dp"
        android:layout_height="128dp"
        android:layout_marginTop="1dp"
        android:columnCount="4"
        android:background="@drawable/grid_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/editTextTextPersonName1"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:layout_row="0"
            android:layout_column="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1" />


        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="108dp"
            android:layout_height="32dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:ems="10"
            android:layout_gravity="fill"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="カロリー" />

        <TextView
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="54dp"
            android:layout_height="31dp"
            android:layout_row="0"
            android:layout_column="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="4" />

        <TextView
            android:id="@+id/editTextTextPersonName8"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:layout_row="1"
            android:layout_column="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="5" />

        <TextView
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:layout_gravity="fill"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="目標:" />

        <TextView
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="57dp"
            android:layout_height="48dp"
            android:layout_row="1"
            android:layout_column="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_row="1"
            android:layout_column="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="cal" />

        <TextView
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_row="2"
            android:layout_column="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="9" />

        <TextView
            android:id="@+id/editTextTextPersonName9"
            android:layout_width="49dp"
            android:layout_height="47dp"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="10"
            android:layout_gravity="fill"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="現在値:" />

        <TextView
            android:id="@+id/editTextTextPersonName10"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_row="2"
            android:layout_column="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/editTextTextPersonName11"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_row="2"
            android:layout_column="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="cal" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>