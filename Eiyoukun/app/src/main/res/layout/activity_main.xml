<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="ユーザー名"
        app:layout_constraintEnd_toStartOf="@+id/useridForm"
        app:layout_constraintTop_toTopOf="@+id/useridForm" />

    <EditText
        android:id="@+id/useridForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="31dp"
        android:text="目的"
        app:layout_constraintBottom_toTopOf="@+id/sex"
        app:layout_constraintEnd_toStartOf="@+id/spinnerPurpose"
        app:layout_constraintTop_toTopOf="@+id/spinnerPurpose" />

    <Spinner
        android:id="@+id/spinnerPurpose"
        android:layout_width="146dp"
        android:layout_height="29dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grid_border"
        android:entries="@array/list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useridForm" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="性別"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSex"
        app:layout_constraintTop_toTopOf="@+id/spinnerSex" />

    <Spinner
        android:id="@+id/spinnerSex"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grid_border"
        android:entries="@array/list1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPurpose" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="年齢"
        app:layout_constraintEnd_toStartOf="@+id/ageForm"
        app:layout_constraintTop_toTopOf="@+id/ageForm" />

    <EditText
        android:id="@+id/ageForm"
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSex" />

    <TextView
        android:id="@+id/歳"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:text="歳"
        app:layout_constraintStart_toEndOf="@+id/ageForm"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSex" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="体重"
        app:layout_constraintEnd_toStartOf="@+id/weightForm"
        app:layout_constraintTop_toTopOf="@+id/weightForm" />

    <EditText
        android:id="@+id/weightForm"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageForm" />

    <TextView
        android:id="@+id/kg"
        android:layout_width="26dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:text="kg"
        app:layout_constraintStart_toEndOf="@+id/weightForm"
        app:layout_constraintTop_toBottomOf="@+id/ageForm" />

    <TextView
        android:id="@+id/活動レベル"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="活動レベル"
        app:layout_constraintEnd_toStartOf="@+id/活動レベルForm"
        app:layout_constraintTop_toTopOf="@+id/活動レベルForm" />

    <Spinner
        android:id="@+id/活動レベルForm"
        android:layout_width="212dp"
        android:layout_height="34dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grid_border"
        android:entries="@array/list2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightForm" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="身長"
        app:layout_constraintEnd_toStartOf="@+id/heightForm"
        app:layout_constraintTop_toTopOf="@+id/heightForm" />

    <EditText
        android:id="@+id/heightForm"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightForm" />

    <TextView
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:text="cm"
        app:layout_constraintStart_toEndOf="@+id/heightForm"
        app:layout_constraintTop_toBottomOf="@+id/weightForm" />

    <Button
        android:id="@+id/決定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="30dp"
        android:onClick="onClickButton"
        android:text="決定"
        app:layout_constraintBottom_toTopOf="@+id/oneDayNeedEiyou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/活動レベルForm" />

    <GridLayout
        android:id="@+id/oneDayNeedEiyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border1"
            android:gravity="center"
            android:text="栄養素"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border1"
            android:gravity="center"
            android:text="1日に必要な栄養素"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/calorie"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="カロリー" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="タンパク質" />

        <TextView
            android:id="@+id/carbon"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="炭水化物" />

        <TextView
            android:id="@+id/fat"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="脂質" />

        <TextView
            android:id="@+id/calorieForm"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/proteinForm"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/carbonForm"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/fatForm"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

    </GridLayout>

    <Button
        android:id="@+id/kojin"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="個人"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/toSyokuziButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="食事"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kojin" />

</androidx.constraintlayout.widget.ConstraintLayout>